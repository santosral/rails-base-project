<h1 class="text-red-600 text-4xl px-2 mt-3"> Edit your article </h1><br/>
<%= form_with model: @article do |f| %>
    <% @article.errors.full_messages_for(:nutritionist_username).each do |message| %>
      <%= message %>
    <% end %>
  
    <% @article.errors.full_messages_for(:caption).each do |message| %>
      <%= message %>
    <% end %>
  
    <% @article.errors.full_messages_for(:source_url).each do |message| %>
      <%= message %>
    <% end %>
  
    <%= f.text_field :nutritionist_username, autofocus: true, value:current_nutritionist.username, placeholder:"username", class:"hidden" %>

    <div class="field px-2">
      <%= f.text_field :title, placeholder: "Write the title of article", autofocus: true, class: "leading-relaxed border-4 border-red-600" %>
    </div><br/>

    <div class="field overflow-auto h-xl pl-2 pr-2">
      <%= f.rich_text_area :caption, autofocus: true %>
    </div>

    <div class="field h-xl pl-2 pr-2">
      <%= f.submit "Update Post", class: "w-full bg-red-600 text-white opacity-100 hover:opacity-50" %>
    </div>
<% end %>