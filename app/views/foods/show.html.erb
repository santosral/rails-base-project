<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Great+Vibes&display=swap" rel="stylesheet">
<style>@import url(https://cdnjs.cloudflare.com/ajax/libs/MaterialDesign-Webfont/5.3.45/css/materialdesignicons.min.css);</style>

  <div class="close">
    <a href="<%= foods_path %>"><svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg></a>
  </div>

  <div class="box-border flex w-full h-full px-5 py-5 bg-white border-8 border-red-600">
    <div class="flex h-auto">
      <%= cl_image_tag(@food.food_key, :height=>400, :aspect_ratio=>"1.5", :crop=>"fill",:class=>"lg:rounded")%>
    </div>
    <div class="flex-column lg:w-1/2 w-full lg:pl-10 mt-3 space-y-1.5 ">
      <h1 class="text-red-600 text-5xl title-font font-bold mb-1 capitalize font-great-vibes"><%= @food.food_name %></h1>
      <h2 class="text-md space-x-1"> Posted by: <strong> <%= current_user.username %></strong>
      <u class="text-blue-500"><%= link_to 'Edit', edit_food_path(@food) %></u> | <u class="text-red-600"><%= link_to 'Delete', food_path(@food), method: :delete, data: { confirm: "Are you sure?" } %></u>
      <h2>
      <p class="leading-relaxed"><%= @food.caption %></p>
      <p><a href="<%= @food.recipe_url %>" class="opacity-100 hover:opacity-50 inline-block text-md text-blue-500 leading-none border-b border-blue-500">Checkout recipe here<i class="mdi mdi-arrow-right"></i></a></p>
      <br/>
      <p class="text-md text-red-600 font-bold">Nutrional Facts:</p>
        <% @nutrition.each do |nutrition|%>
          <p class="text-sm"> <strong><%= nutrition.label %></strong> <%= nutrition.quantity %> <%= nutrition.unit %></p>
        <% end %><br/>
        <p class="font-bold text-sm text-red-600">Comments</p>
        <div class="overflow-y-auto h-52">
          <%= render 'comments/comments', commentable: @food %>
        </div><br/>
          <%= render 'comments/form', commentable: @food %>
    </div>
      
  </div>



