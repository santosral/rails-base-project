<div class="bg-red-600 w-1/4 space-y-7 px-2.5 py-8">
  <div class="w-full h-auto rounded-md sm:rounded-xl">
    <%= image_tag("bouffage.png", class:"w-full") %>
    <h1 class="text-gray-50 -mt-5 text-xl font-bold text-center">Capturing food moments</h1>
  </div>
    
  <nav>
    <% if user_signed_in? %>
      <%= link_to "Newsfeed", root_path, class:"block py-3 px-5 text-gray-50 text-xl font-bold rounded transition duration-200 hover:bg-green-500 cursor-pointer hover:text-white" %>
      <%= link_to "My Foods", foods_path, class:"block py-3 px-5 text-gray-50 text-xl font-bold rounded transition duration-200 hover:bg-green-500 cursor-pointer hover:text-white" %>
      <%= link_to "Create Post", new_food_path, class:"block py-3 px-5 text-gray-50 text-xl font-bold rounded transition duration-200 hover:bg-green-500 cursor-pointer hover:text-white" %>
      <%= link_to "Log out", destroy_user_session_path, class:"block py-3 px-5 text-gray-50 text-xl font-bold rounded transition duration-200 hover:bg-green-500 cursor-pointer hover:text-white" %>
    <% end %>

    <% if nutritionist_signed_in? %>
      <%= link_to "Newsfeed", root_path, class:"block py-3 px-5 text-gray-50 text-xl font-bold rounded transition duration-200 hover:bg-green-500 cursor-pointer hover:text-white" %>
      <%= link_to "My Articles", articles_path, class:"block py-3 px-5 text-gray-50 text-xl font-bold rounded transition duration-200 hover:bg-green-500 cursor-pointer hover:text-white" %>
      <%= link_to "Create Post", new_article_path, class:"block py-3 px-5 text-gray-50 text-xl font-bold rounded transition duration-200 hover:bg-green-500 cursor-pointer hover:text-white" %>
      <%= link_to "Log out", destroy_nutritionist_session_path, class:"block py-3 px-5 text-gray-50 text-xl font-bold rounded transition duration-200 hover:bg-green-500 cursor-pointer hover:text-white" %>
    <% end %>

    <% if admin_signed_in? %>
      <%= link_to "Approval", root_path, class:"block py-3 px-5 text-gray-50 text-xl font-bold rounded transition duration-200 hover:bg-green-500 cursor-pointer hover:text-white" %>
      <%= link_to "Log out", destroy_admin_session_path, class:"block py-3 px-5 text-gray-50 text-xl font-bold rounded transition duration-200 hover:bg-green-500 cursor-pointer hover:text-white" %>
    <% end %>
    
  </nav>

  <div class="block px-5 py-3"">
    <input type="text" placeholder="Search for food ..." class="w-3/4 h-10 rounded placeholder-red-600 font-bold px-2">
  </div>
  
  <div>
    <h1 class="text-gray-50 text-2xl font-bold">Powered by:</h1>
    <div class="flex flex-wrap justify-around items-center w-full">
      <div class="w-1/3 mx-1">
        <%= image_tag("cloudinary.png", class:"w-full") %>
      </div>
      <div class="w-1/3 mx-1">
      <%= image_tag("edamam.png", class:"w-full") %>
      </div>
      <div class="w-1/3 mx-1">
      <%= image_tag("logmeal.png", class:"w-full") %>
      </div>
    </div>
  </div>
</div>