<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Great+Vibes&family=Raleway&display=swap" rel="stylesheet">

<div class='bg-red-600 w-screen h-screen flex justify-center items-center'>
    <div class='absolute p-20 rounded-lg bg-white w-2/4 shadow-2xl' >
      <center>
      <h2 class='mb-8 font-great-vibes text-7xl text-red-600 font-bold' >Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "nutritionists/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: 'Username', :class => 'bg-gray-100 w-full p-3 rounded-lg' %>
        </div>

        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', :class => 'bg-gray-100 w-full p-3 rounded-lg mt-5' %>
        </div>

        <div class="field">
          <%= f.number_field :license_num, autofocus: true, in: 1..9999999, step: 1, placeholder: 'License Number', :class => 'bg-gray-100 w-full p-3 rounded-lg mt-5' %>
        </div>

        <div class="field">
          <%= f.number_field :years_exp, autofocus: true, in: 1..60, step: 1, placeholder: 'Years of Experience', :class => 'bg-gray-100 w-full p-3 rounded-lg mt-5' %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password (6 characters minimum)', :class => 'bg-gray-100 w-full p-3 rounded-lg mt-5' %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Password Confirmation', :class => 'bg-gray-100 w-full p-3 rounded-lg mt-5' %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", :class => 'bg-gray-100 w-full p-3 rounded-lg mt-5 font-raleway tracking-wider text-lg bg-yellow-400 font-bold' %>
        </div>
      <% end %>
    <p class="mt-5">                  
      Already have an account? <br>
    <u class='mt-5 text-blue-600'><%= render "devise/shared/links" %></u>                 
  </p>
  </center>
  </div>
</div>